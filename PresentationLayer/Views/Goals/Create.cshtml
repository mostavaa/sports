@model PresentationLayer.Models.dbModels.Goal

@{
    ViewBag.Title = "Create";
}
<div class="container">




    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.LabelFor(model => model.GoalLink, htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>

                        <th>
                            @Html.LabelFor(model => model.GoalPlayerName, htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>
                        <th>
                            @Html.LabelFor(model => model.MatchId, htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>
  
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.EditorFor(model => model.GoalLink, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GoalLink, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            @Html.EditorFor(model => model.GoalPlayerName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GoalPlayerName, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            @Html.EditorFor(model => model.MatchId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MatchId, "", new { @class = "text-danger" })
                        </td>
                    
                       
                    </tr>
                </tbody>
            </table>
            <div class="">
                <div class="col-md-offset-2 col-md-2">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <hr />
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>

    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            $('.form_datetime').datetimepicker({
                //language:  'fr',
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                forceParse: 0,
                showMeridian: 1
            });
        });
    </script>
}
