@using PresentationLayer.Models.dbModels
@using PresentationLayer.Resources
@model System.Collections.Generic.List<PresentationLayer.Models.dbModels.Album>

@{
    ViewBag.Title = Resources.Gallery;
}


<div class="container">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-bordered .table-striped">
        <thead class="thead-dark">
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => new Album().AlbumName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => new Album().NewsId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => new Album().MatchId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{
                            var ImageName = @item.GUID + ".png";
                        }
                        <a href="~/Content/Images/@ImageName"><img src="/Content/Images/Icons/@ImageName" /></a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AlbumName)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.News.NewsHeading)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Match.FirstTeamName)-@Html.DisplayFor(modelItem => item.Match.SecondTeamName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                            }

        </tbody>

    </table>
</div>