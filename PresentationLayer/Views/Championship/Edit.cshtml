@using PresentationLayer.Resources
@model PresentationLayer.Models.dbModels.Championship

@{
    ViewBag.Title = Resources.ChampsTitle;
    
    }

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Match</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.LabelFor(model => model.ChampName, htmlAttributes: new { @class = "control-label col-md-2" })
                    </th>

                    <th>
                        @Html.LabelFor(model => model.Stars, htmlAttributes: new { @class = "control-label col-md-2" })
                    </th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.EditorFor(model => model.ChampName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ChampName, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Stars, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Stars, "", new { @class = "text-danger" })
                    </td>

                </tr>
            </tbody>
        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
