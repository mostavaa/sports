@using PresentationLayer.Resources
@model PresentationLayer.Models.dbModels.Match

@{
    ViewBag.Title = Resources.matches;
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <table class="table">
                <thead>
                <tr>
                    <th>
                        @Html.LabelFor(model => model.ChampionshipId, htmlAttributes: new { @class = "control-label col-md-2" })
                    </th>
                    <th>
                        @Html.LabelFor(model => model.FirstTeamName, htmlAttributes: new {@class = "control-label col-md-2"})
                    </th>

                    <th>
                        @Html.LabelFor(model => model.FirstTeamGoals, htmlAttributes: new {@class = "control-label col-md-2"})
                    </th>
                    <th>
                        @Html.LabelFor(model => model.SecondTeamGoals, htmlAttributes: new {@class = "control-label col-md-2"})
                    </th>
                    <th>
                        @Html.LabelFor(model => model.SecondTeamName, htmlAttributes: new {@class = "control-label col-md-2"})
                    </th>
                    <th>
                        @Html.LabelFor(model => model.MatchDateTime, htmlAttributes: new {@class = "control-label col-md-2"})
                    </th>
                    <th>
                        @Html.LabelFor(model => model.IsPlayed, htmlAttributes: new {@class = "control-label col-md-2"})
                    </th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>
                        @Html.DropDownListFor(model => model.ChampionshipId, (IEnumerable<SelectListItem>)ViewBag.Championships,  new {  @class = "form-control"  })
                        @Html.ValidationMessageFor(model => model.FirstTeamName, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.FirstTeamName, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.FirstTeamName, "", new {@class = "text-danger"})
                    </td>
                    <td>
                        @Html.EditorFor(model => model.FirstTeamGoals, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.FirstTeamGoals, "", new {@class = "text-danger"})
                    </td>
                    <td>
                        @Html.EditorFor(model => model.SecondTeamGoals, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.SecondTeamGoals, "", new {@class = "text-danger"})
                    </td>
                    <td>
                        @Html.EditorFor(model => model.SecondTeamName, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.SecondTeamName, "", new {@class = "text-danger"})
                    </td>
                    <td>
                        @Html.EditorFor(model => model.MatchDateTime)
                        @Html.ValidationMessageFor(model => model.MatchDateTime, "", new {@class = "text-danger"})
                    </td>
                    <td>
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsPlayed)
                            @Html.ValidationMessageFor(model => model.IsPlayed, "", new {@class = "text-danger"})
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
