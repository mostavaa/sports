@using PresentationLayer.Resources
@model IEnumerable<PresentationLayer.Models.dbModels.Match>

@{
    ViewBag.Title = Resources.matches;
}
<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-bordered .table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChampionshipId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstTeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstTeamGoals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondTeamGoals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondTeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPlayed)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Championship.ChampName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstTeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstTeamGoals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondTeamGoals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondTeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatchDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPlayed)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
    
</div>
