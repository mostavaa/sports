                            <div class="fh5co_latest_trading_img_position_absolute_1">
                                <a v-bind:href="singlePageLink+item.link" class="text-white"> {{item.desc}} </a>
                                <div class="fh5co_latest_trading_date_and_name_color"> {{item.date}} </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

 

    <div>


        <div class="container-fluid pb-4 pt-4 paddding">
            <div class="container paddding">
                <div class="row mx-0">
                    <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                        <div>
                            <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">@listHeader</div>
                        </div>
                        <div class="row pb-4" v-for="item in listNews">
                            <div class="col-md-5">
                                <div class="fh5co_hover_news_img">
                                    <div class="fh5co_news_img">
                                        <img v-bind:src="imagesUrl+item.imageName" alt="" />
                                    </div>
                                    <div></div>
                                </div>
                            </div>
                            <div class="col-md-7 animate-box">
                                <a v-bind:href="singlePageLink+item.link" class="fh5co_magna py-2">
                                    {{item.desc}}
                                </a> <a v-bind:href="singlePageLink+item.link" class="fh5co_mini_time py-3">
                                    {{item.date}}
                                </a>
                               
                            </div>
                        </div>

                        <div class="row mx-0 animate-box fadeInUp animated-fast" data-animate-effect="fadeInUp">
                            <div class="col-12 text-center pb-4 pt-4">
                                <a href="#" v-on:click="getPrevious($event)" class="btn_mange_pagging"><i class="fa fa-long-arrow-left"></i></a>
                                <a  class="btn_pagging ">{{currentPage}}</a>
                                <a href="#" v-on:click="getNext($event)" class="btn_mange_pagging"><i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 animate-box" data-animate-effect="fadeInRight">

                        <div>
                            <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">@mostPopularHeading</div>
                        </div>
                        <div class="row pb-3" v-for="item in listMostPopular">
                            <div class="col-5 align-self-center">
                                <img v-bind:src="iconsUrl+item.imageName" alt="img" class="fh5co_most_trading" />
                            </div>
                            <div class="col-7 paddding">
                                <div class="most_fh5co_treding_font"><a v-bind:href="singlePageLink+item.link">{{item.desc}}</a>  </div>
                                <div class="most_fh5co_treding_font_123"> {{item.date}}</div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>


</div>

@section scripts{
<script>

    var app = new Vue({
        el: '#app',
        data: {
            singlePageLink:'@Url.Action("Single","Home")/',
            imagesUrl: '../../Content/Images/',
            iconsUrl: '../../Content/Images/Icons/',

            firstItem: {
                imageName: 'nick-karvounis-78711.jpg',
                date: new Date(),
                link: 'single.html',
                desc: 'After all is said and done, more is said than done'
            },
            latestItems: [],


            champs: [],


            listNews: [],
            previousPage:0,
            nextPage:2,
            currentPage: 1,
            
            listMostPopular: [],


        },
        methods:
        {
            getPrevious: function (e) {
                debugger;
                e.preventDefault();
                if (app.previousPage) {
                    var url = '@Url.Action("getNews", "Home")?id=' + app.previousPage;
                    var champId = getParameterByName("champId");
                    if (champId && champId!=0) {
                        url += "&championshipId=" + champId;
                    }

                    $.ajax({
                        url: url ,
                        data: {
                            format: 'json'
                        },
                        success: function (data) {
                            if (data.result && data.result.allNews && data.result.allNews.length>0 ) {
                                app.listNews = data.result.allNews;
                                app.nextPage = app.currentPage;
                                app.currentPage = app.previousPage;
                                app.previousPage--;
                            }
                        },
                        type: 'GET'
                    });
                }
            },
            getNext: function (e) {
                e.preventDefault();
                if (app.nextPage) {
                    var url = '@Url.Action("getNews", "Home")?id=' + app.nextPage;
                    var champId = getParameterByName("champId");
                    if (champId && champId!=0) {
                        url += "&championshipId=" + champId;
                    }
                    $.ajax({
                        url: url,
                        data: {
                            format: 'json'
                        },
                        success: function (data) {
                            if (data.result && data.result.allNews && data.result.allNews.length > 0) {
                                app.listNews = data.result.allNews;
                                app.previousPage = app.currentPage;
                                app.currentPage = app.nextPage;
                                app.nextPage++;
                            }
                        },
                        type: 'GET'
                    });
                }
            }
        },
        created: function () {
            var url = '@Url.Action("InitHome", "Home")';

            var champId = getParameterByName("champId");
            if (champId && champId!=0) {

                 url +="?championshipId="+ champId;
            }
            $.ajax({
                url: url,
                data: {
                    format: 'json'
                },
                success: function (data) {
                    if (data.result) {
                        app.firstItem = data.result.latest5News[0];
                        app.latestItems = data.result.latest5News.slice(1, data.result.latest5News.length - 1);
                        app.listNews = data.result.allNews;
                        app.listMostPopular = data.result.mostPopular;
                        app.champs = data.result.latestNews;
                    }
                },
                type: 'GET'
            });
        }
    });

    function GetInitialData() {

    }
</script>
}