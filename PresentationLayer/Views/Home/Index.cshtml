            <div class="container animate-box" data-animate-effect="fadeIn">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">{{champ.ChampName}}</div>
                </div>
                <div class="owl-carousel owl-theme js slider1" id="">
                    <div class="item px-2" v-for="item in champ.News">
